<script>
    function getVal(elem){
        //console.log(elem.checked);
        console.log(elem);
        var xhr = new XMLHttpRequest();
        
        xhr.open('POST', '/encendido', true);
        xhr.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
        if(elem){
            console.log("ON");
            xhr.send("boton=false");
            
        } else {
            console.log("OFF");
            xhr.send("boton=true");
        }
    }
    function inDir(elem){
